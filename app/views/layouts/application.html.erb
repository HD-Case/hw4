<!DOCTYPE html>
<html>
  <head>
    <title>Travel Journal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS (include before the custom stylesheet) -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Travel Journal</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <% @user = User.find_by({ "id" => session["user_id"] }) %>
          <% if @user != nil %>
            <li class="nav-item">
              <span class="navbar-text">Welcome, <%= @user["username"] %></span>
            </li>
            <li class="nav-item">
              <!-- Logout should call sessions#destroy -->
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/new">Signup</a>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container mt-4">
      <div>
        <%= flash[:notice] %>
      </div>
      <%= yield %>
    </div>

  </body>
</html>
