<h1>Places</h1>

<div class="row">
  <% for place in @places %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <a href="/places/<%= place["id"] %>"><%= place["name"] %></a>
          </h5>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @user != nil %>
  <p>
    <a class="btn btn-primary" href="/places/new">New Place</a>
  </p>
<% end %>